<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@drawable/item_selected_lv"
    android:elevation="5dp">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/baseline_person_black_18dp"/>
        <TextView
            android:id="@+id/adapter_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="usuario"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/mamey"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linear1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/baseline_vpn_key_black_18dp"/>
        <TextView
            android:id="@+id/adapter_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="password"
            android:textSize="20sp"
            android:textColor="@color/naranja"
            android:layout_marginStart="10dp"
            android:focusable="false"
            android:layout_marginTop="3dp"
            android:focusableInTouchMode="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linear2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/baseline_folder_shared_black_18dp"/>
        <TextView
            android:id="@+id/adapter_tipo"
            android:background="@color/lila_claro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tipo"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/azulRey"
            android:layout_marginTop="3dp"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </LinearLayout>
</RelativeLayout>